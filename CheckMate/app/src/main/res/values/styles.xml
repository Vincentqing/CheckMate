<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TopNavigation" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@color/colorAccent</item>
        <item name="tabTextColor">#FFFFFF</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="TopNavigationText">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
