<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/announcement_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="black"
        android:text="Hi guys, we have a BBQ party this Friday."
        android:textSize="18dp" />

    <TextView
        android:id="@+id/announcement_item_meta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#888"
        android:layout_below="@id/announcement_item_content"
        android:text="Leon 5/21/2017"
        android:textSize="18dp" />
</RelativeLayout>