<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.uw.dengz6.checkmate">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark"
            />

        <activity
            android:name=".ShoppingListDetailActivity"
            android:label="@string/title_activity_shopping_list_detail"
            android:parentActivityName=".MainActivity"
            >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uw.dengz6.checkmate.MainActivity"/>

        </activity>

        <activity android:name=".SignupActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>

                <category android:name="android.intent.category.DEFAULT"></category>
                <category android:name="android.intent.category.BROWSABLE"></category>

                <data
                    android:host="www.my.app.com"
                    android:path="/launch"
                    android:scheme="http"></data>
            </intent-filter>
        </activity>

        <activity android:name=".AddMembersActivity"></activity>
    </application>
</manifest>